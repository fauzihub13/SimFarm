<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditPassword"
    android:orientation="vertical"
    android:paddingHorizontal="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ubah Password"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/brownPrimary"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp"
                android:id="@+id/tes_id"
                android:visibility="gone"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password Lama"
                android:textSize="18sp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/rounded_form"
                android:paddingHorizontal="18dp"
                android:id="@+id/edit_passwordLama"
                android:layout_marginBottom="20dp"
                android:inputType="textPassword"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password Baru"
                android:textSize="18sp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/rounded_form"
                android:paddingHorizontal="18dp"
                android:id="@+id/edit_passwordBaru"
                android:layout_marginBottom="20dp"
                android:inputType="textPassword"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ulangi Password"
                android:textSize="18sp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/rounded_form"
                android:paddingHorizontal="18dp"
                android:id="@+id/edit_ulangiPassword"
                android:layout_marginBottom="20dp"
                android:inputType="textPassword"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Kembali"
                    android:id="@+id/btn_backFromEditPassword"
                    android:backgroundTint="@color/greyPrimary"
                    android:layout_marginRight="5dp"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Simpan"
                    android:id="@+id/btn_simpanPassword"
                    android:backgroundTint="@color/brownPrimary"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>

            <!--            <androidx.appcompat.widget.AppCompatButton-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:background="@drawable/btn_upload_image"-->
            <!--                android:text="Unggah Foto"-->
            <!--                android:textSize="18sp"-->
            <!--                android:textColor="@color/white"-->
            <!--                android:paddingHorizontal="18dp"-->
            <!--                android:id="@+id/btn_uploadImage"-->
            <!--                />-->
            <!--Button for decoding of image-->
            <!--            <Button-->
            <!--                android:id="@+id/btn_decode"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginStart="4dp"-->
            <!--                android:layout_marginLeft="4dp"-->
            <!--                android:layout_weight="1"-->
            <!--                android:text="DEcode Image"-->
            <!--                app:backgroundTint="@color/brownPrimary" />-->

            <!-- Textview to display encoded text-->
            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:maxLines="5"
                android:text=""

                />

            <!--             Imageview to display decoded image-->
            <!--            <ImageView-->
            <!--                android:id="@+id/imageView"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="match_parent"-->
            <!--                android:layout_marginTop="8dp"-->
            <!--                android:adjustViewBounds="true"-->
            <!--                android:scaleType="centerCrop" />-->


        </LinearLayout>

    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Daftar"
        android:backgroundTint="@color/brownPrimary"
        android:layout_marginTop="10dp"
        android:id="@+id/btn_daftar"/>



</LinearLayout>