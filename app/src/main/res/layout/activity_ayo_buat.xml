<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ayoBuat"
    android:orientation="vertical"
    android:paddingHorizontal="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingVertical="10dp">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/backbutton"
            android:layout_gravity="center"
            android:layout_marginEnd="16dp"
            android:id="@+id/btn_backFromAyoBuat"
            />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AyoBuat"
                android:textSize="28sp"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lengkapi semua data dibawah ini."
                android:textColor="@color/greyPrimary"
                android:textAlignment="center"
                android:layout_marginBottom="30dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pilih jenis hewan ternak Anda."
                android:textAlignment="center"
                android:layout_marginBottom="20dp"
                />


            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:id="@+id/radioGroup"
                >

                <RadioButton
                    android:id="@+id/sapiPotong"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:background="@drawable/custom_radio_selector"
                    android:button="@color/transparant"
                    android:drawableTop="@drawable/sapipotong"
                    android:gravity="center_horizontal"
                    android:layout_marginRight="6dp"
                    android:paddingTop="16dp"
                    android:tag="Sapi Potong"
                    />

                <RadioButton
                    android:id="@+id/sapiPerah"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:background="@drawable/custom_radio_selector"
                    android:button="@color/transparant"
                    android:drawableTop="@drawable/sapiperah"
                    android:gravity="center_horizontal"
                    android:layout_marginRight="6dp"
                    android:paddingTop="16dp"

                    android:tag="Sapi Perah"
                    />

                <RadioButton
                    android:id="@+id/kambing"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:background="@drawable/custom_radio_selector"
                    android:button="@color/transparant"
                    android:drawableTop="@drawable/kambing"
                    android:gravity="center_horizontal"
                    android:layout_marginRight="6dp"
                    android:paddingTop="16dp"

                    android:tag="Kambing"
                    />

                <RadioButton
                    android:id="@+id/kerbau"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:background="@drawable/custom_radio_selector"
                    android:button="@color/transparant"
                    android:drawableTop="@drawable/kerbau"
                    android:gravity="center"
                    android:layout_marginRight="6dp"
                    android:paddingTop="16dp"
                    android:tag="Kerbau"
                    />


            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/opsiHewan"
                android:text=""
                android:textAlignment="center"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="20dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <!-- Bagian Kiri -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Jumlah Hewan"
                        android:textSize="18sp"
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="8dp"
                        android:textAlignment="center"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Durasi Ternak"
                        android:inputType="number"
                        android:textSize="18sp"
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="8dp"
                        android:textAlignment="center"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <!-- Bagian Kiri -->
                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="50dp"
                        android:background="@drawable/rounded_form"
                        android:hint="Ekor"
                        android:paddingHorizontal="18dp"
                        android:layout_marginRight="8dp"
                        android:inputType="number"
                        android:id="@+id/jumlahHewan"
                        android:textAlignment="center"
                        />
                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="50dp"
                        android:background="@drawable/rounded_form"
                        android:hint="Bulan"
                        android:paddingHorizontal="18dp"
                        android:layout_marginLeft="8dp"
                        android:inputType="number"
                        android:id="@+id/durasiTernak"
                        android:textAlignment="center"
                        />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/viewHasil"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jenis Pakan:"
                        android:layout_marginBottom="8dp"
                        android:textSize="18sp"

                        android:paddingHorizontal="8dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rumput"
                        android:id="@+id/hasilJenisPakan"
                        android:layout_marginBottom="8dp"
                        android:paddingHorizontal="8dp"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5px"
                        android:background="@color/greySecondary"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Panjang Kandang:"
                        android:layout_marginBottom="8dp"
                        android:textSize="18sp"

                        android:paddingHorizontal="8dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5m"
                        android:id="@+id/hasilPanjangKandang"
                        android:layout_marginBottom="8dp"
                        android:paddingHorizontal="8dp"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5px"
                        android:background="@color/greySecondary"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lebar Kandang:"
                        android:layout_marginBottom="8dp"
                        android:textSize="18sp"

                        android:paddingHorizontal="8dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="20m"
                        android:id="@+id/hasilLebarKandang"
                        android:layout_marginBottom="8dp"
                        android:paddingHorizontal="8dp"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5px"
                        android:background="@color/greySecondary"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tinggi Kandang:"
                        android:layout_marginBottom="8dp"
                        android:textSize="18sp"

                        android:paddingHorizontal="8dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="3m"
                        android:id="@+id/hasilTinggiKandang"
                        android:layout_marginBottom="8dp"
                        android:paddingHorizontal="8dp"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5px"
                        android:background="@color/greySecondary"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vitamin"
                        android:layout_marginBottom="8dp"
                        android:textSize="18sp"

                        android:paddingHorizontal="8dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Vitamin K"
                        android:id="@+id/hasilVitamin"
                        android:layout_marginBottom="8dp"
                        android:paddingHorizontal="8dp"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5px"
                        android:background="@color/greySecondary"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vaksin"
                        android:layout_marginBottom="8dp"
                        android:textSize="18sp"
                        android:paddingHorizontal="8dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Vaksin AB"
                        android:id="@+id/hasilVaksin"
                        android:layout_marginBottom="8dp"
                        android:paddingHorizontal="8dp"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5px"
                        android:background="@color/greySecondary"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Volume Air Bersih:"
                        android:layout_marginBottom="8dp"
                        android:textSize="18sp"
                        android:paddingHorizontal="8dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="84 L/ hari"
                        android:id="@+id/hasilVolumeAir"
                        android:layout_marginBottom="8dp"
                        android:paddingHorizontal="8dp"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5px"
                        android:background="@color/greySecondary"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jumlah SDM:"
                        android:layout_marginBottom="8dp"
                        android:textSize="18sp"
                        android:paddingHorizontal="8dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5 orang"
                        android:id="@+id/hasilSDM"
                        android:layout_marginBottom="8dp"
                        android:paddingHorizontal="8dp"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5px"
                        android:background="@color/greySecondary"
                        />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Estimasi Biaya:"
                    android:textAlignment="textEnd"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="10dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rp52.500.000"
                    android:id="@+id/hasilEstimasiBiaya"
                    android:textAlignment="textEnd"
                    android:textSize="16sp"
                    android:paddingHorizontal="10dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="20dp"
                    />

            </LinearLayout>




            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Buat Peternakan"
                android:backgroundTint="@color/brownPrimary"
                android:id="@+id/btn_hitungRancangan"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />

        </LinearLayout>



    </ScrollView>






</LinearLayout>